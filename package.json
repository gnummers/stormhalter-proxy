{
  "private": true,
  "main": "main/index.js",
  "productName": "Stormhalter Packet Proxy",
  "author": {
    "name": "Ken Human",
    "email": "ken@kenhuman.com"
  },
  "name": "stormhalter-proxy",
  "version": "2.0.3",
  "scripts": {
    "clean": "pnpm exec rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && electron .",
    "build-renderer": "pnpm exec next build renderer",
    "build-electron": "tsc -p electron-src",
    "build": "npm run build-renderer && npm run build-electron",
    "pack-app": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "type-check": "tsc -p ./renderer/tsconfig.json && tsc -p ./electron-src/tsconfig.json",
    "validate-asar": "powershell -ExecutionPolicy Bypass -File ./scripts/validate-asar-runtime.ps1"
  },
  "dependencies": {
    "": "link:/",
    "app-root-path": "^3.1.0",
    "daisyui": "^4.7.2",
    "electron-is-dev": "^1.2.0",
    "electron-next": "^3.1.5",
    "electron-store": "^8.1.0",
    "fast-xml-parser": "^4.3.6",
    "memoryjs": "^3.5.1",
    "moment": "^2.30.1",
    "node-active-window": "github:kenhuman/node-active-window",
    "node-api-dotnet": "^0.7.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "conf": "10.1.0",
    "dot-prop": "6.0.1",
    "is-obj": "2.0.0",
    "pkg-up": "3.1.0",
    "find-up": "4.1.0",
    "locate-path": "5.0.0",
    "p-locate": "4.1.0",
    "p-limit": "2.3.0",
    "p-try": "2.2.0",
    "env-paths": "2.2.1",
    "debounce-fn": "2.0.0",
    "mimic-fn": "3.1.0",
    "onetime": "5.1.2",
    "strnum": "1.0.5",
    "atomically": "2.0.0"
  },
  "devDependencies": {
    "@types/node": "^14.18.63",
    "@types/react": "^16.14.52",
    "@types/react-dom": "^16.9.24",
    "autoprefixer": "^10.4.17",
    "electron": "^27.1.2",
    "electron-builder": "^24.9.1",
    "next": "latest",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^4.9.5"
  },
  "build": {
    "asar": true,
    "files": [
      "main",
      "renderer/out/**/*"
    ],
    "extraFiles": [
      {
        "from": "bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "npmRebuild": false
  }
}